<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeApp.Views.RecipeDetailPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">
    <StackLayout>
        <Label Text="{Binding Name}" FontSize="24" HorizontalOptions="CenterAndExpand" Margin="0,0,0,20" />
        <Label Text="{Binding Instructions}" Margin="0,0,0,10" />

        <!-- Add a label to display the ingredients -->
        <Label Text="Ingredients:" FontAttributes="Bold" />
        <Label Text="{Binding Ingredients}" />

    </StackLayout>

</ContentPage>